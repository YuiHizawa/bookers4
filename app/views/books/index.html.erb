<h1>Books</h1>
<div class="table">
	<table>
		<thead>
			<tr>
				<th>title</th>
				<th>body</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<% @books.each do |book| %>
				<tr>
					<td><p><%= book.title %></p></td>
					<td><p><%= book.body %></p></td>
					<td><%= link_to "Show", book_path(book.id) %></td>
					<td><%= link_to "Edit", edit_book_path(book.id) %></td>
					<td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
				</tr>
				<% end %>
			</tr>
			
		</tbody>
	</table>
</div>

<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>

<%= form_for(@book) do |f| %>
	<p>title</p>
	<%= f.text_field :title %>
	<p>body</p>
	<%= f.text_area :body %>
	<%= f.submit "Create Book" %>
<% end %>